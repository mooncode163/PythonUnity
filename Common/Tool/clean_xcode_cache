
#! /bin/sh

filepath=$(cd "$(dirname "$0")"; pwd)

# VMware 虚拟机共享目录里路径带空格 需要转换处理
str1=$filepath
str2="VMware" 
if [[ $str1 =~ $str2 ]]
then
    echo "包含"
    #去除带空格的路径
    #filepath=${filepath// /\\ } 
    filepath=${filepath#/Volumes/VMware Shared Folders/}
    cd /Volumes/VMware\ Shared\ Folders
else
    echo "不包含"
fi


echo $filepath
cd $filepath  
python3 clean_xcode_cache.py 
 


